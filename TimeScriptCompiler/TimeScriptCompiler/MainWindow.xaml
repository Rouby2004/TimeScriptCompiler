<Window x:Class="TimeScriptCompiler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🕒 TimeScript Compiler — Lexical Analyzer"
        Height="600" Width="1000"
        Background="#1E1E1E"
        FontFamily="Segoe UI">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
            <Button x:Name="RunButton"
                    Content="▶ Run"
                    Width="90" Height="32" Margin="0,0,10,0"
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="RunButton_Click"/>

            <Button x:Name="ClearButton"
                    Content="🧹 Clear"
                    Width="90" Height="32"
                    Background="#444"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="ClearButton_Click"/>

            <TextBlock Text="TimeScript Lexical Analyzer"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"
                       Foreground="LightGray"
                       FontSize="16"
                       FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Editor and Output -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="420" />
            </Grid.ColumnDefinitions>

            <!-- Code Editor -->
            <Border Grid.Column="0"
                    CornerRadius="5"
                    BorderBrush="#333"
                    BorderThickness="1"
                    Background="#252526"
                    Padding="5">
                <TextBox x:Name="Editor"
                         FontFamily="Consolas"
                         FontSize="14"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         Foreground="White"
                         Background="#252526"
                         BorderThickness="0"
                         Text="start&#x0a;    set hour h = 0&#x0a;    loop h &lt; 3:&#x0a;        show &quot;Tick &quot; + h&#x0a;        set h = h + 1&#x0a;    end&#x0a;end"/>
            </Border>

            <!-- Output Console -->
            <Border Grid.Column="2"
                    CornerRadius="5"
                    BorderBrush="#333"
                    BorderThickness="1"
                    Background="#1E1E1E"
                    Padding="5">
                <RichTextBox x:Name="OutputBox"
                             FontFamily="Consolas"
                             FontSize="13"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             Background="#1E1E1E"
                             Foreground="White"
                             BorderThickness="0">
                    <FlowDocument>
                        <Paragraph Foreground="LightGray">
                            Output will appear here...
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Border>
        </Grid>
    </Grid>
</Window>
